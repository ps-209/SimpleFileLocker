<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleFileLocker"
        xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="SimpleFileLocker.MainWindow"
        mc:Ignorable="d"
        Title="SimpleFileLocker v1.0.1" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Height="335" Width="560">
    <Grid Height="320" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <hc:Divider Content="File" Margin="20,0,20,290" Grid.ColumnSpan="2" Height="20"/>
        <Button Content="Open" x:Name="open_button" Click="Open_button_clicked" Margin="10,0,0,257" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="80"/>
        <TextBox hc:InfoElement.Placeholder="C:\example\files\a.txt" x:Name="dir_box" FontFamily="Consolas" Style="{StaticResource TextBoxExtend}" HorizontalAlignment="Left" Margin="90,0,0,257" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="431"/>
        <hc:Divider Content="Password + Mode" Margin="20,0,20,230" Grid.ColumnSpan="2" Height="20" VerticalAlignment="Bottom"/>
        <hc:PasswordBox x:Name="password_box" hc:InfoElement.ShowClearButton="True" HorizontalAlignment="Left" Margin="40,0,0,195" VerticalAlignment="Bottom" Width="180"/>
        <ComboBox x:Name="mode_box" SelectionChanged="mode_box_changed" HorizontalAlignment="Left" Margin="340,0,0,195" VerticalAlignment="Bottom" Width="180"/>
        <hc:Divider Content="Protection" Margin="20,135,20,0" Height="20" VerticalAlignment="Top"/>
        <hc:ButtonGroup x:Name ="protect_group" Margin="10,165,10,0">
            <RadioButton x:Name="protect_on" Content="On" Margin="0,0,0,0"/>
            <RadioButton x:Name="protect_off" Content="Off" IsChecked="True" Margin="0,0,0,0"/>
        </hc:ButtonGroup>
        <Button Content="Start" x:Name="start_button" Click="Start_button_clicked" FontSize="15" Margin="0,220,0,0" VerticalAlignment="Top" Height="60" Width="200"/>
        <Button x:Name="help_button" Click="Help_button_clicked" Width="35" Height="35" HorizontalAlignment="Left" Margin="10,255,0,0" VerticalAlignment="Top">
            <Image Source="/Image/question_icon.png" Width="35"/>
        </Button>
    </Grid>
</Window>
